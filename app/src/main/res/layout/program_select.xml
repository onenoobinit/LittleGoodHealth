<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/all_program_select"
    android:layout_height="141px"
    android:layout_marginTop="20px"
    android:background="@color/c_F3F2F2"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="43px"
        android:text="筛选" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_just"
            android:layout_width="144px"
            android:layout_height="63px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_tv_just"
            android:gravity="center"
            android:text="正装"
            android:textColor="@color/white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_prepare"
            android:layout_width="144px"
            android:layout_height="63px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="37px"
            android:background="@drawable/bg_tv_back"
            android:gravity="center"
            android:text="备装"
            android:textColor="@color/c_00A7F7"
            android:textSize="40px" />

        <View
            android:layout_width="1px"
            android:layout_height="53px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="58px"
            android:background="@color/c_979797"></View>

        <TextView
            android:id="@+id/tv_tray"
            android:layout_width="144px"
            android:layout_height="63px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="58px"
            android:background="@drawable/bg_tv_just"
            android:gravity="center"
            android:text="散货"
            android:textColor="@color/white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_bulk"
            android:layout_width="144px"
            android:layout_height="63px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="52px"
            android:background="@drawable/bg_tv_back"
            android:gravity="center"
            android:text="托盘"
            android:textColor="@color/c_00A7F7"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>