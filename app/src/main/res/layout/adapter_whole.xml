<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F3F2F2">

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46px"
        android:layout_marginTop="40px"
        android:text="今天09:30"
        android:textColor="@color/c_AAAAAA"
        android:textSize="35px" />

    <TextView
        android:id="@+id/tv_order_numnber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="46px"
        android:layout_marginTop="40px"
        android:text="运单号:123456780"
        android:textColor="@color/c_AAAAAA"
        android:textSize="35px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_date"
        android:layout_marginLeft="46px"
        android:layout_marginRight="46px"
        android:layout_marginTop="17px"
        android:background="@drawable/bg_order_item"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3px"
                    android:text="久茂物流"
                    android:textColor="@color/c_00A7F7"
                    android:textSize="29px" />

                <ImageView
                    android:layout_width="14px"
                    android:layout_height="23px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9px"
                    android:rotation="180"
                    android:src="@mipmap/back_arrow_blue" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="69px"
                android:layout_height="86px"
                android:layout_marginLeft="29px"
                android:layout_marginTop="43px"
                android:src="@mipmap/ic_launcher" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="始发港"
                        android:layout_centerVertical="true"
                        android:textColor="@color/c_A8A8A8"
                        android:textSize="29px" />

                    <TextView
                        android:id="@+id/tv_item_order_date"
                        android:layout_width="wrap_content"
                        android:text="9月9日"
                        android:textSize="40px"
                        android:layout_centerInParent="true"
                        android:textColor="@color/c_181818"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="目的港"
                        android:textColor="@color/c_A8A8A8"
                        android:textSize="29px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="6px"
                    android:layout_height="wrap_content">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_start_py"
                            android:layout_width="wrap_content"
                            android:text="PVG"
                            android:textSize="52px"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/c_00A7F7"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_start_hy"
                            android:layout_width="wrap_content"
                            android:text="上海"
                            android:textSize="29px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="9px"
                            android:textColor="@color/c_00A7F7"
                            android:layout_height="wrap_content" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@mipmap/fly"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_end_hy"
                            android:layout_width="wrap_content"
                            android:text="巴塞罗那"
                            android:textSize="29px"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/c_00A7F7"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_end_py"
                            android:layout_width="wrap_content"
                            android:text="BCN"
                            android:textSize="52px"
                            android:layout_marginLeft="9px"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/c_00A7F7"
                            android:layout_height="wrap_content" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/c_979797"
                    android:layout_marginTop="14px"
                    android:layout_height="1px"></View>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="12px"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3PCS"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/c_9b9b9b"
                        android:textSize="35px"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="100KG"
                        android:layout_marginLeft="52px"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/c_9b9b9b"
                        android:textSize="35px"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="0.6CBM"
                        android:layout_marginLeft="52px"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/c_9b9b9b"
                        android:textSize="35px"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1:300"
                        android:layout_marginLeft="52px"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/c_9b9b9b"
                        android:textSize="35px"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="37px"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_Insurance"
                        android:layout_width="wrap_content"
                        android:text="货延险"
                        android:layout_centerVertical="true"
                        android:textSize="35px"
                        android:textColor="@color/c_575757"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_item_money"
                        android:layout_width="wrap_content"
                        android:text="预计费用 ¥19000.00"
                        android:textSize="35px"
                        android:layout_centerVertical="true"
                        android:textColor="@color/c_575757"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>