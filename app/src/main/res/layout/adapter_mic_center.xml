<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_miccenter_item"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/ll_click"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_miccenter_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/zz_zxal_mrbj_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_miccenter_item"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_miccenter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_4A4A4A"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/tv_miccenter_zx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_doctor_biaoqian"
                    android:visibility="gone"
                    android:layout_marginLeft="17dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_miccenter_marjor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="主治医生"
                android:textColor="@color/c_999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_miccenter_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/c_4EB2FF"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/c_F3F2F2"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"></View>

    </RelativeLayout>
</RelativeLayout>