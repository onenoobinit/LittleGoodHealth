<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:overScrollMode="never">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_desiginer_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        app:navigationIcon="@mipmap/back_arrow_blue"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="@color/c_3d3d3d"
            android:textSize="52px"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_desiginer_search"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:layout_marginTop="250px"
            android:text="用户名需8-16位，且同时包含字母和数字，字母区分大小写"
            android:textColor="@color/c_F5A623"
            android:textSize="29px" />

        <EditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="127px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="69px"
            android:layout_marginRight="66px"
            android:layout_marginTop="10px"
            android:background="@drawable/bg_register_item"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="用户名"
            android:inputType="number|textEmailAddress"
            android:maxLength="16"
            android:paddingLeft="66px"
            android:textColorHint="@color/c_9b9b9b"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:layout_marginRight="130px"
            android:layout_marginTop="40px"
            android:text="用户名需8-16位，可包含大小写字母、数字、特殊字符，必须含有字母和数字"
            android:textColor="@color/c_F5A623"
            android:textSize="29px" />

        <EditText
            android:id="@+id/tv_password"
            android:layout_width="945px"
            android:layout_height="127px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:background="@drawable/bg_register_item"
            android:hint="输入密码"
            android:maxLength="16"
            android:paddingLeft="66px"
            android:textColorHint="@color/c_9b9b9b"
            android:textSize="40px" />

        <EditText
            android:id="@+id/tv_password_sure"
            android:layout_width="945px"
            android:layout_height="127px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="63px"
            android:background="@drawable/bg_register_item"
            android:hint="确认密码"
            android:maxLength="16"
            android:paddingLeft="66px"
            android:textColorHint="@color/c_9b9b9b"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="945px"
            android:layout_height="127px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="158px"
            android:background="@drawable/bg_tv_gray"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="52px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_recept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/all_yinsi"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5px"
            android:alpha="0.8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册代表您同意"
                android:textColor="@color/c_9b9b9b"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_login_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《三脚猫用户协议》"
                android:textColor="@drawable/tv_web_click"
                android:textSize="35px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_yinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_to_register"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50px"
            android:alpha="0.8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="以及"
                android:textColor="@color/c_9b9b9b"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_login_mimi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《三脚猫隐私条款》"
                android:textColor="@drawable/tv_web_click"
                android:textSize="35px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>