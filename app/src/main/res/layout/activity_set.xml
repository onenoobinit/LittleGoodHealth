<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F3F2F2"
    android:fitsSystemWindows="true"
    android:overScrollMode="never">

    <android.support.v7.widget.Toolbar
        android:id="@+id/logi_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        app:navigationIcon="@mipmap/back_arrow_blue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="设置"
            android:textColor="@color/c_000000"
            android:textSize="20sp"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logi_tool_bar"
        android:layout_marginLeft="46px"
        android:layout_marginRight="46px"
        android:layout_marginTop="17px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_set_normal"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="58px"
                    android:src="@mipmap/user_icon" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="70px"
                    android:layout_toRightOf="@+id/iv_user"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxx"
                        android:textColor="@color/c_292929"
                        android:textSize="40px" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_set_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="男"
                            android:textColor="@color/c_9b9b9b"
                            android:textSize="35px" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="40px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="35px"
                            android:background="@color/c_D8D8D8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="35px"
                            android:text="2000-01-01"
                            android:textColor="@color/c_9b9b9b"
                            android:textSize="35px" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="90px"
                    android:src="@mipmap/arrow_right" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:layout_marginTop="32px"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">

                <TextView
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="绑定手机" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_set_phone"
                        style="@style/setLeftTv"
                        android:layout_gravity="center_vertical"
                        android:text="123****1234" />

                    <ImageView
                        style="@style/setIv"
                        android:layout_gravity="center_vertical" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:layout_marginTop="26px"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px">

                <TextView
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="绑定邮箱" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_set_mail"
                        style="@style/setLeftTv"
                        android:layout_gravity="center_vertical"
                        android:text="123@qq.com" />

                    <ImageView
                        style="@style/setIv"
                        android:layout_gravity="center_vertical" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:layout_marginTop="20px"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">

                <TextView
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="绑定身份证" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_set_id"
                        style="@style/setLeftTv"
                        android:layout_gravity="center_vertical"
                        android:text="便于确认个人信息" />

                    <ImageView
                        style="@style/setIv"
                        android:layout_gravity="center_vertical" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:background="@color/c_F3F2F2"
                android:layout_marginTop="32px"></View>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@drawable/bg_set_normal"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px">

                <TextView
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="会员等级" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_set_vip"
                        style="@style/setLeftTv"
                        android:layout_gravity="center_vertical"
                        android:text="青铜会员" />

                    <ImageView
                        style="@style/setIv"
                        android:layout_gravity="center_vertical" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:background="@color/c_F3F2F2"
                android:layout_marginTop="26px"></View>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@drawable/bg_set_normal"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px">

                <TextView
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="修改登录密码" />


                <ImageView
                    style="@style/setIv"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:background="@color/c_F3F2F2"
                android:layout_marginTop="26px"></View>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@drawable/bg_set_normal"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px">

                <TextView
                    android:id="@+id/tv_set_cache"
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="清除缓存" />


                <ImageView
                    style="@style/setIv"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:layout_marginTop="20px"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_set_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px">

                <TextView
                    style="@style/setLeftTv"
                    android:layout_centerVertical="true"
                    android:text="关于" />


                <ImageView
                    style="@style/setIv"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                style="@style/setVline"
                android:background="@color/c_F3F2F2"
                android:layout_marginTop="26px"></View>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_set_out"
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="101px"
        android:layout_marginLeft="46px"
        android:layout_marginRight="46px"
        android:background="@drawable/bg_set_out"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="52px" />
</com.zhy.autolayout.AutoRelativeLayout>