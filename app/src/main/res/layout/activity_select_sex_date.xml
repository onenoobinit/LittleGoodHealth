<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F3F2F2"
    tools:context="com.youyijia.goodhealth.app.login.LoginActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/imagesstorage_btn_back" />

    <TextView
        android:id="@+id/tv_line1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="请正确选择出生日期和性别,"
        android:textColor="@color/c_4A4A4A"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_line2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="有助于建立智能化健康档案哦~"
        android:textColor="@color/c_4A4A4A"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_sex_star" />

    <LinearLayout
        android:id="@+id/ll_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_boy_weixuanzhong" />

        <TextView
            android:id="@+id/tv_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="男生"
            android:textColor="@color/c_AAAAAA"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="74dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_girl_weixuanzhong" />

        <TextView
            android:id="@+id/tv_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="女生"
            android:textColor="@color/c_AAAAAA"
            android:textSize="16sp" />
    </LinearLayout>

    <com.youyijia.goodhealth.widgets.PickTimeView
        android:id="@+id/pt_date"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_above="@+id/tv_next"
        android:background="@color/white"></com.youyijia.goodhealth.widgets.PickTimeView>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c_4EB2FF"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
