<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:overScrollMode="never">

    <android.support.v7.widget.Toolbar
        android:id="@+id/logi_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/c_F5A623"
        app:navigationIcon="@mipmap/navagation_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="绑定邮箱"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="66px"
        android:layout_marginTop="276px"
        android:background="@drawable/bg_all_phone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="66px"
            android:text="+86"
            android:textColor="@color/c_CDCDCD"
            android:textSize="40px" />

        <View
            android:layout_width="1px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:background="@color/c_CDCDCD"></View>

        <EditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:background="@null"
            android:inputType="phone"
            android:maxEms="11"
            android:maxLength="11"
            android:textColor="@color/c_000000"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="66px"
        android:layout_marginTop="100px"
        android:background="@drawable/bg_all_phone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="66px"
            android:text="验证码"
            android:textColor="@color/c_CDCDCD"
            android:textSize="40px" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxEms="6"
            android:maxLength="6"
            android:textColor="@color/c_000000"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="60px"
            android:text="获取验证码"
            android:textColor="@color/c_00A7F7"
            android:textSize="35px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_bind_mail"
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="66px"
        android:layout_marginTop="115px"
        android:background="@drawable/bg_tv_gray"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="52px" />
</com.zhy.autolayout.AutoLinearLayout>