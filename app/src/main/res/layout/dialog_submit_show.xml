<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_funds_dilog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_detail_next"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/upgrade_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textScaleX="1"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.5"
            android:text="托运人证实以上所填内容全部属实，并愿遵守承运人和代理 人的一切规章。&#x000A;THE SHIPPER CONFIRMS THAT THE PARTICULARS ON THE FACE HERE OF ARE CORRECT AND AGREES TO THE CONDITIONS OF CARRIAGE OF CARRIER &#x000A;如遇运价调整及拉货，请及时通知我司，否则我司概不承担 责任。"
            android:textColor="@color/c_4A4A4A"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textScaleX="1"
            android:lineSpacingMultiplier="1.5"
            android:text="重要提示：实际入库数据超出订舱数据20%（重量或体积），该票货物需重新订舱！如有疑问请咨询喵客服或拨打400-728-5256"
            android:textColor="@color/c_9b9b9b"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_submit_show_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tv_login"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </com.zhy.autolayout.AutoLinearLayout>

</RelativeLayout>