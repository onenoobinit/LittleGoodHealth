<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left_top"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:background="@color/c_E5E5E5" />

        <ImageView
            android:id="@+id/iv_trace_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/choseblue" />

        <TextView
            android:id="@+id/tv_left_bottom"
            android:layout_width="1dp"
            android:layout_below="@+id/iv_trace_item"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/c_E5E5E5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp">


        <TextView
            android:id="@+id/tv_title_trace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:text="已签收"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/c_4A4A4A"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time_trace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/tv_title_trace"
            android:text="2019-04-22"
            android:textColor="@color/c_4A4A4A"
            android:textSize="13sp" />

        <View
            android:id="@+id/v_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="1dp"
            android:background="@color/c_F4F4F4"></View>
    </RelativeLayout>

</LinearLayout>