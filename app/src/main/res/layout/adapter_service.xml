<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_city"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/ll_click"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/c_4A4A4A"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_iv_select"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/close_blue_circle" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_city"
        android:background="@color/c_F3F2F2" />

    <ImageView
        android:id="@+id/iv_service_item"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/v_line"
        android:scaleType="centerCrop"
        android:visibility="gone" />
</RelativeLayout>