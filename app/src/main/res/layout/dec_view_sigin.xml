<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never">

    <ScrollView
        android:id="@+id/sv_sigin"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:id="@+id/all_sign_time"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5px"
                        android:text="陪签时间  :"
                        android:textColor="@color/c_888888"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_sign_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:layout_gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@color/c_000000"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:src="@mipmap/jlapp_zxfk_zffs_xl_icon" />


                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5px"
                        android:text="装修公司:"
                        android:textColor="@color/c_888888"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_sign_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="22px"
                        android:layout_marginRight="30px"
                        android:background="@drawable/et_bg"
                        android:hint="装修公司名称"
                        android:paddingLeft="20px"
                        android:textColorHint="@color/c_888888"
                        android:textSize="15sp" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5px"
                            android:text="服务状态:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />
                    </com.zhy.autolayout.AutoLinearLayout>


                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22px"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/ifpay"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/cb_bg"
                                android:checked="false"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:text="是否支付" />

                            <CheckBox
                                android:id="@+id/getdoor"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="90px"
                                android:button="@drawable/cb_bg"
                                android:checked="false"
                                android:paddingLeft="5dp"
                                android:text="已上门" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22px"
                            android:layout_marginTop="50px"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/getsign"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/cb_bg"
                                android:checked="false"
                                android:paddingLeft="5dp"
                                android:text="已签约" />

                            <CheckBox
                                android:id="@+id/gettg"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="118px"
                                android:button="@drawable/cb_bg"
                                android:checked="false"
                                android:paddingLeft="5dp"
                                android:text="已托管" />
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>


                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_if_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:text="是否支付"
                        android:textColor="@color/c_000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64px"
                        android:layout_marginTop="50px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5px"
                            android:text="实收金额:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/et_sign_getmoney"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="22px"
                            android:layout_marginRight="30px"
                            android:background="@drawable/et_bg"
                            android:hint="单位/元（例：2000.0）"
                            android:paddingLeft="20px"
                            android:textColorHint="@color/c_888888"
                            android:textSize="15sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/all_pay_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5px"
                            android:text="支付方式:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_pay_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22px"
                            android:text="请选择"
                            android:textColor="@color/c_000000"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20px"
                            android:src="@mipmap/jlapp_zxfk_zffs_xl_icon" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="60px"
                        android:background="@color/c_efefef"></View>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_if_sigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:text="已签约"
                        android:textColor="@color/c_000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64px"
                        android:layout_marginTop="50px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5px"
                            android:layout_gravity="center_vertical"
                            android:text="合同金额:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/et_sign_getsign"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="22px"
                            android:layout_marginRight="30px"
                            android:background="@drawable/et_bg"
                            android:hint="单位/元（例：2000.0）"
                            android:paddingLeft="20px"
                            android:textColorHint="@color/c_888888"
                            android:textSize="15sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="60px"
                        android:background="@color/c_efefef"></View>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_if_tuoguo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:text="已托管"
                        android:textColor="@color/c_000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/all_tuoguo_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5px"
                            android:layout_gravity="center_vertical"
                            android:text="托管方式:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_tg_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22px"
                            android:text="请选择"
                            android:textColor="@color/c_000000"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20px"
                            android:src="@mipmap/jlapp_zxfk_zffs_xl_icon" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64px"
                        android:layout_marginTop="50px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5px"
                            android:layout_gravity="center_vertical"
                            android:text="托管金额:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/et_tg_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="22px"
                            android:layout_marginRight="30px"
                            android:background="@drawable/et_bg"
                            android:hint="单位/元（例：2000.0）"
                            android:paddingLeft="20px"
                            android:textColorHint="@color/c_888888"
                            android:textSize="15sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/all_tg_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5px"
                            android:layout_gravity="center_vertical"
                            android:text="托管日期:"
                            android:textColor="@color/c_888888"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_tg_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22px"
                            android:text="请选择"
                            android:textColor="@color/c_000000"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20px"
                            android:src="@mipmap/jlapp_zxfk_zffs_xl_icon" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="60px"
                        android:background="@color/c_efefef" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_marginBottom="60px"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5px"
                        android:text="备        注:"
                        android:textColor="@color/c_888888"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_describe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="22px"
                        android:layout_marginRight="30px"
                        android:background="@drawable/et_bg"
                        android:hint="请输入描述内容"
                        android:paddingLeft="20px"
                        android:textColorHint="@color/c_888888"
                        android:textSize="15sp" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/c_efefef"
                android:layout_height="match_parent"></View>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>